# ═══════════════════════════════════════════════════════════════
# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update with your values
# ═══════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────
# AWS Configuration
# ─────────────────────────────────────────────────────────────
aws_region = "eu-central-1"  # Change to your preferred region

# ─────────────────────────────────────────────────────────────
# Project Configuration
# ─────────────────────────────────────────────────────────────
project_name = "cicd-pipeline"
environment  = "dev"

# ─────────────────────────────────────────────────────────────
# Network Configuration
# ─────────────────────────────────────────────────────────────
vpc_cidr        = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.10.0/24", "10.0.20.0/24"]

# ─────────────────────────────────────────────────────────────
# Security Configuration
# IMPORTANT: Replace with your actual IP address for security
# Get your IP: curl ifconfig.me
# ─────────────────────────────────────────────────────────────
allowed_ips     = ["YOUR_IP/32"]     # SSH and Jenkins access
app_allowed_ips = ["YOUR_IP/32"]     # Application port 5000 access (also applies to ECS)

# ─────────────────────────────────────────────────────────────
# EC2 Configuration
# ─────────────────────────────────────────────────────────────
key_name              = "cicd-pipeline-dev-keypair"
jenkins_instance_type = "t3.micro"
app_instance_type     = "t3.micro"
jenkins_volume_size   = 20
app_volume_size       = 20

# ─────────────────────────────────────────────────────────────
# Jenkins Configuration
# IMPORTANT: Use a strong password
# ─────────────────────────────────────────────────────────────
jenkins_admin_password = "YourSecurePassword123!"

# ─────────────────────────────────────────────────────────────
# ECR Configuration (Container Registry)
# ─────────────────────────────────────────────────────────────
ecr_repository_name = "cicd-node-app"   # ECR repo name (matches Jenkinsfile default)
ecr_max_image_count = 20                # Keep last 20 tagged images

# ─────────────────────────────────────────────────────────────
# ECS Configuration (Container Orchestration)
# These defaults match what the Jenkinsfile expects!
# ─────────────────────────────────────────────────────────────
ecs_cluster_name       = "cicd-node-cluster"   # ECS cluster name
ecs_service_name       = "cicd-node-service"   # ECS service name
ecs_task_family        = "cicd-node-app"        # Task definition family
ecs_task_cpu           = "256"                  # 0.25 vCPU (cheapest Fargate option)
ecs_task_memory        = "512"                  # 512 MiB
ecs_desired_count      = 1                      # Number of running containers
ecs_log_group_name     = "/ecs/cicd-node-app"   # CloudWatch log group
ecs_log_retention_days = 30                     # Delete logs after 30 days
